    "copy:css:1": "copyfiles -u 1 src/*.css dist",
    "build:tailwindcss": "tailwindcss build src/tailwind.css -o ./dist/styles.css",
    "docs": "typedoc --out docs",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "peerDependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
